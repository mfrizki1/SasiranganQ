<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.c.sasirangan.belajar"
        android:background="#FFFFF2F4">

        <Button
            android:id="@+id/sejarah"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/sejarah"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sejarah"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/btn"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/txtsejarah"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/sejarah"
            android:layout_alignStart="@+id/sejarah"
            android:layout_alignEnd="@+id/sejarah" />

        <Button
            android:id="@+id/ragam"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ragam"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="220dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ragam"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/btn"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/txtragam"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ragam"
            android:layout_alignStart="@+id/ragam"
            android:layout_alignEnd="@+id/ragam" />


        <Button
            android:id="@+id/alat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/alat"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/txtsejarah"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alat"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/btn"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/txtalat"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/alat"
            android:layout_alignLeft="@+id/alat"
            android:layout_alignStart="@+id/alat"
            android:layout_alignRight="@+id/alat"
            android:layout_alignEnd="@+id/alat" />

        <Button
        android:id="@+id/cara"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/cara"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="220dp"
        android:layout_below="@+id/txtragam"    />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cara Pembuatan"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/btn"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/txtcara"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="190dp"
            android:layout_below="@+id/cara"/>

        <Button
            android:id="@+id/btnHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_home"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
