<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.c.sasirangan.ragam"
    android:background="#FFFFF2F4">

    <View
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/jdlrgm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ragam Sasirangan"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        android:layout_alignTop="@+id/garis"/>

    <View
        android:id="@+id/garis1"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#000"
        android:layout_below="@+id/jdlrgm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtrgm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum lacinia ut elit ac vehicula. Donec lobortis a ligula et porttitor. Donec consequat mi vitae lectus cond"
        android:textColor="@color/primaryTextColor"
        android:layout_below="@+id/jdlrgm"
        android:layout_marginTop="15dp"/>

        <!--Raja Bayam-->
        <Button
            android:id="@+id/sasi1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/rajabayam"
            android:layout_below="@id/txtrgm"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txtsasi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raja Bayam"
            android:layout_below="@+id/sasi1"
            android:layout_alignStart="@+id/sasi1"
            android:layout_alignEnd="@+id/sasi1"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"/>

        <!--Bintang Bahambur-->
        <Button
            android:id="@+id/sasi2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/bintang_bahambur"
            android:layout_below="@id/txtsasi1"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txtsasi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bintang Bahambur"
            android:layout_below="@+id/sasi2"
            android:layout_alignStart="@+id/sasi2"
            android:layout_alignEnd="@+id/sasi2"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"/>

        <!--Daun Jaruju-->
        <Button
            android:id="@+id/sasi3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/daunjaruju"
            android:layout_below="@id/txtsasi2"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txtsasi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daun Jaruju"
            android:layout_below="@+id/sasi3"
            android:layout_alignStart="@+id/sasi3"
            android:layout_alignEnd="@+id/sasi3"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"/>

        <!--Kulat Karikit-->
        <Button
            android:id="@+id/sasi10"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/kulat_karikit"
            android:layout_below="@+id/txtsasi9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtsasi10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kulat Karikit"
            android:layout_below="@+id/sasi10"
            android:layout_alignStart="@+id/sasi10"
            android:layout_alignEnd="@+id/sasi10"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"/>

        <!--Gelombang-->
        <Button
            android:id="@+id/sasi4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/gelombang"
            android:layout_alignTop="@+id/sasi1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txtsasi4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gelombang"
            android:layout_below="@+id/sasi4"
            android:layout_alignStart="@+id/sasi4"
            android:layout_alignEnd="@+id/sasi4"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"/>

        <!--Gigi Haruan-->
