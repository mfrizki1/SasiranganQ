        <TextView
            android:id="@+id/txtsasi7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kangkung Kaumbakan"
            android:layout_below="@+id/sasi7"
            android:layout_alignStart="@+id/sasi7"
            android:layout_alignEnd="@+id/sasi7"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"/>

        <!--Kambang Sasaki-->
        <Button
            android:id="@+id/sasi8"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/kambangsasaki"
            android:layout_alignTop="@+id/sasi5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txtsasi8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kambang Sasaki"
            android:layout_below="@+id/sasi8"
            android:layout_alignStart="@+id/sasi8"
            android:layout_alignEnd="@+id/sasi8"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"/>

        <!--Kembang Kacang-->
        <Button
            android:id="@+id/sasi9"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/kembangkacang"
            android:layout_above="@+id/txtsasi6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txtsasi9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembang Kacang"
            android:layout_below="@+id/sasi9"
            android:layout_alignStart="@+id/sasi9"
            android:layout_alignEnd="@+id/sasi9"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"/>

        <!--Ombak Sinapur Karang-->
        <Button
            android:id="@+id/sasi12"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/ombaksinapurkarang"
            android:layout_above="@+id/txtsasi11"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txtsasi12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ombak Sinapur Karang"
            android:layout_below="@+id/sasi12"
            android:layout_alignStart="@+id/sasi12"
            android:layout_alignEnd="@+id/sasi12"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"/>

        <!--Ramak Sahang-->
        <Button
            android:id="@+id/sasi13"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/ramaksahang"
            android:layout_alignTop="@+id/sasi14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtsasi13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sasi13"
            android:layout_alignStart="@+id/sasi13"
            android:layout_alignEnd="@+id/sasi13"
            android:gravity="center"
            android:text="Ramak Sahang"
            android:textColor="@color/primaryTextColor"/>

        <!--Ular Lidi-->
        <Button
            android:id="@+id/sasi14"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/ular_lidi"
            android:layout_below="@+id/txtsasi12"
            android:layout_alignLeft="@+id/txtsasi11"
            android:layout_alignStart="@+id/txtsasi11" />

        <TextView
            android:id="@+id/txtsasi14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ular Lidi"
            android:gravity="center"
            android:layout_below="@+id/sasi14"
            android:layout_alignLeft="@+id/sasi14"
            android:layout_alignStart="@+id/sasi14"
            android:layout_alignRight="@+id/sasi14"
            android:layout_alignEnd="@+id/sasi14"
            android:textColor="@color/primaryTextColor"/>

        <!--Turun Dayang-->
        <Button
            android:id="@+id/sasi15"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/turun_dayang"
            android:layout_below="@+id/txtsasi12"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txtsasi15"
            android:layout_width="wrap_content"
