<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.c.sasirangan.ragam"
    android:background="#FFFFF2F4">

    <View
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/jdlrgm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ragam Sasirangan"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        android:layout_alignTop="@+id/garis"/>

    <View
        android:id="@+id/garis1"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#000"
        android:layout_below="@+id/jdlrgm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnHome"
        android:layout_below="@+id/garis1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--cardview1-->
            <LinearLayout
                android:id="@+id/lytRagam1"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_below="@+id/garis1">

                <!--Raja Bayam-->
                <android.support.v7.widget.CardView
                    android:id="@+id/rajabayam"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="112dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgrajabayam"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/rajabayam"/>

                        <TextView
                            android:id="@+id/txtrajabayam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Raja Bayam"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--gelombang-->
                <android.support.v7.widget.CardView
                    android:id="@+id/gelombang"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="112dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgalat"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/gelombang"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gelombang"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/txtalat" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--kangkung-->
                <android.support.v7.widget.CardView
                    android:id="@+id/kangkung"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="112dp"
                    android:layout_margin="10dp"

                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgalat"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/kangkungkaongbakan"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kangkung Kaumbakan"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/txtalat" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!--cardview2-->
            <LinearLayout
                android:id="@+id/lytRagam2"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_below="@+id/lytRagam1">

                <!--Bintang Bahambur-->
                <android.support.v7.widget.CardView
                    android:id="@+id/bintangbahambur"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgbintangbahambur"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/bintang_bahambur"/>

                        <TextView
                            android:id="@+id/txtbintangbahambur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bintang Bahambur"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--Gigi Haruan-->
                <android.support.v7.widget.CardView
                    android:id="@+id/gigiharuan"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imggigiharuan"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/gigiharuan"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gigi Haruan"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/txtgigiharuan" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--Kambang Sasaki-->
                <android.support.v7.widget.CardView
                    android:id="@+id/kambangsasaki"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgkambangsasaki"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/kambangsasaki"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kambang Sasaki"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/txtkambangsasaki" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!--cardview3-->
            <LinearLayout
                android:id="@+id/lytRagam3"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_below="@+id/lytRagam2">

                <!--Daun Jaruju-->
                <android.support.v7.widget.CardView
                    android:id="@+id/daunjaruju"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgdaunjaruju"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/daunjaruju"/>

                        <TextView
                            android:id="@+id/txtdaunjaruju"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daun Jaruju"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--Kambang Tampuk Manggis-->
                <android.support.v7.widget.CardView
                    android:id="@+id/tampukmanggis"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgtampukmanggis"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/kambang_tampuk_manggis"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kambang Tampuk Manggis"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/txttampukmanggis" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--Kembang Kacang-->
                <android.support.v7.widget.CardView
                    android:id="@+id/kembangkacang"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgkembangkacang"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/kembangkacang"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kembang Kacang"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/txtkembangkacang" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!--cardview4-->
            <LinearLayout
                android:id="@+id/lytRagam4"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_below="@+id/lytRagam3">

                <!--Kulat Karikit-->
                <android.support.v7.widget.CardView
                    android:id="@+id/kulatkarikit"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgkulatkarikit"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/kulat_karikit"/>

                        <TextView
                            android:id="@+id/txtkulatkarikit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kulat Karikit"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--Naga Balimbur-->
                <android.support.v7.widget.CardView
                    android:id="@+id/nagabalimbur"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgnagabalimbur"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/naga_balimbur"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Naga Balimbur"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/txtnagabalimbur" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--Ombak Sinapur Karang-->
                <android.support.v7.widget.CardView
                    android:id="@+id/ombaksinapur"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgombaksinapur"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ombaksinapurkarang"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ombak Sinapur Karang"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/txtombaksinapur" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!--cardview5-->
            <LinearLayout
                android:id="@+id/lytRagam5"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_below="@+id/lytRagam4">

                <!--Ramak Sahang-->
                <android.support.v7.widget.CardView
                    android:id="@+id/ramaksahang"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgramaksahang"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ramaksahang"/>

                        <TextView
                            android:id="@+id/txtramaksahang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ramak Sahang"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--Ular Lidi-->
                <android.support.v7.widget.CardView
                    android:id="@+id/ularlidi"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgularlidi"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ular_lidi"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ular Lidi"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/txtularlidi" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--Turun Dayang-->
                <android.support.v7.widget.CardView
                    android:id="@+id/turundayang"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="100dp"
                    android:layout_height="115dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgturundayang"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/turun_dayang"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Turun Dayang"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/txtturundayang" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_home"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>







