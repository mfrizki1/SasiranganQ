            android:id="@+id/sasi5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/gigiharuan"
            android:layout_below="@+id/txtsasi4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txtsasi5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gigi Haruan"
            android:layout_below="@+id/sasi5"
            android:layout_alignStart="@+id/sasi5"
            android:layout_alignEnd="@+id/sasi5"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"/>

        <!--Kambang Tampuk Manggis-->
        <Button
            android:id="@+id/sasi6"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/kambang_tampuk_manggis"
            android:layout_alignTop="@+id/sasi3"
            android:layout_alignLeft="@+id/txtsasi5"
            android:layout_alignStart="@+id/txtsasi5" />

        <TextView
            android:id="@+id/txtsasi6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kambang Tampuk Manggis"
            android:gravity="center"
            android:layout_below="@+id/sasi6"
            android:layout_centerHorizontal="true"
            android:textColor="@color/primaryTextColor"/>

        <!--Naga Balimbur-->
        <Button
            android:id="@+id/sasi11"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/naga_balimbur"
            android:layout_below="@+id/txtsasi9"
            android:layout_alignLeft="@+id/sasi6"
            android:layout_alignStart="@+id/sasi6" />

        <TextView
            android:id="@+id/txtsasi11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naga Balimbur"
            android:gravity="center"
            android:layout_below="@+id/sasi11"
            android:layout_centerHorizontal="true"
            android:textColor="@color/primaryTextColor"/>

        <!--Kangkung KAumbakan-->
        <Button
            android:id="@+id/sasi7"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/kangkungkaongbakan"
            android:layout_alignTop="@+id/sasi4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
